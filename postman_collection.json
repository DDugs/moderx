{
  "info": {
    "_postman_id": "b7ed2838-3693-4b5e-97b0-ec0f44257944",
    "name": "Patient Record System API",
    "description": "API collection for the Patient Record Management System. Includes endpoints for Admin and Doctor operations.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Operations",
      "item": [
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Role",
                "value": "admin",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"age\": 34,\n    \"gender\": \"Male\",\n    \"contactInfo\": \"john.doe@example.com\",\n    \"medicalHistory\": \"No significant history\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/patients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Patient (Concurrency Check)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "X-User-Role",
                "value": "admin",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"version\": 0,\n    \"name\": \"John Doe Updated\",\n    \"contactInfo\": \"new.email@example.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/patients/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients",
                "1"
              ]
            },
            "description": "Requires the current 'version' to be passed in the body. If version mismatches server, returns 409 Conflict."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Doctor Operations",
      "item": [
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-User-Role",
                "value": "doctor",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Patient by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-User-Role",
                "value": "doctor",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "patients",
                "1"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Add Visit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Role",
                "value": "doctor",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"patientId\": 1,\n    \"doctorName\": \"Dr. Smith\",\n    \"notes\": \"Patient reported mild fever.\",\n    \"diagnosis\": \"Viral Infection\",\n    \"prescription\": \"Paracetamol 500mg\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/visits",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "visits"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}